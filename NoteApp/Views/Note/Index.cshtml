@model List<NoteApp.Models.Note>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Заметки</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1>Список заметок</h1>

        <!-- Таблица заметок -->
        <table class="note-table">
            <thead>
                <tr>
                    <th>Заголовок</th>
                    <th>Текст</th>
                    <th>Дата создания</th>
                    <th>Теги</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var note in Model)
                {
                    <tr>
                        <td>@note.Title</td>
                        <td>@note.Text</td>
                        <td>@note.CreatedDate.ToString("dd MMM yyyy HH:mm")</td>
                        <td>@string.Join(", ", note.Tags)</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="links">
            <a href="/Note/Create" class="button">Создать новую заметку</a>
            <a href="/Note/SaveToFile" class="button">Сохранить в файл</a>
            <a href="/Note/LoadFromFile" class="button">Загрузить из файла</a>
        </div>
    </div>
</body>
</html>
